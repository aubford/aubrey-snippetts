{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "globals": {
    "Class": true,
    "$Keys": true,
    "$Exact": true,
    "$Diff": true,
    "$Rest": true,
    "$Shape": true,
    "$PropertyType": true,
    "SyntheticInputEvent": true,
    "SyntheticKeyboardEvent": true,
    "SyntheticMouseEvent": true,
    "SyntheticEvent": true,
    "React": true,
    "jest": true,
    "expect": true,
    "test": true,
    "fail": true,
    "beforeAll": true,
    "afterAll": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "TimeoutID": true,
    "IntervalID": true
  },
  "plugins": ["react", "flowtype"],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "no-var": "warn",
    "no-console": "off",
    "no-unused-vars": "off",
    "no-param-reassign": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": "off",
    "prefer-const": ["warn", { "ignoreReadBeforeAssign": false }]
  }
}
